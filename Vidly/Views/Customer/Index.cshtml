@model IEnumerable<Vidly.Models.Customer>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Customers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer  in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink( customer.Name, "Details","Customer", new {id = customer.Id}, null)      


                </td>
            </tr>   
        }
    
    </tbody>
</table>

